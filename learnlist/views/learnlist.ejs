<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= learnlist.name %></title>
</head>
<body>
    <h1><%= learnlist.name %></h1>
    <p><%= learnlist.description %></p>

    <% if (userFavorites.includes(learnlist.id)) { %>
        <form action="/learnlists/<%= learnlist.id %>/unfavourite" method="POST">
            <button type="submit">Remove from Favourites</button>
        </form>
    <% } else { %>
        <form action="/learnlists/<%= learnlist.id %>/favourite" method="POST">
            <button type="submit">Add to Favourites</button>
        </form>
    <% } %>

    <h2>Resources</h2>
    <ul>
        <% resources.forEach(resource => { %>
            <li><%= resource.name %></li>
        <% }) %>
    </ul>

    <h2>Reviews</h2>
    <ul>
        <% reviews.forEach(review => { %>
            <li>Rating: <%= review.rating %></li>
        <% }) %>
    </ul>

    <h2>Add a Review</h2>
    <form action="/learnlists/<%= learnlist.id %>/reviews" method="POST">
        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating" min="1" max="5" required>
        <button type="submit">Submit Review</button>
    </form>
</body>
</html>
