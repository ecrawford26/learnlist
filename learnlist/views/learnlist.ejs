<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= learnlist.name %></title>
</head>
<body>
    <h1><%= learnlist.name %></h1>
    <p><%= learnlist.description %></p>

    <% if (userFavorites.includes(learnlist.id)) { %>
        <form action="/learnlists/<%= learnlist.id %>/unfavourite" method="POST">
            <button type="submit">Remove from Favorites</button>
        </form>
    <% } else { %>
        <form action="/learnlists/<%= learnlist.id %>/favourite" method="POST">
            <button type="submit">Add to Favorites</button>
        </form>
    <% } %>

    <h2>Resources</h2>
    <ul>
        <% resources.forEach(resource => { %>
            <li><%= resource.name %></li>
        <% }) %>
    </ul>

    <h2>Reviews</h2>
    <ul>
        <% reviews.forEach(review => { %>
            <li>Rating: <%= review.rating %></li>
        <% }) %>
    </ul>
</body>
</html>

