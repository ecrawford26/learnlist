<!DOCTYPE html>
<html>
<head>
  <title>All Content</title>
  <link rel="stylesheet" href="/path/to/your/css">
</head>
<body>
  <h1>All Content</h1>
  
  <form method="GET" action="/all-content">
    <label for="category">Category:</label>
    <select name="category" id="category">
      <option value="">All</option>
      <% categories.forEach(category => { %>
        <option value="<%= category.id %>" <%= category.id == selectedCategory ? 'selected' : '' %>><%= category.name %></option>
      <% }) %>
    </select>

    <label for="search">Search:</label>
    <input type="text" name="search" id="search" value="<%= search %>">

    <button type="submit">Filter</button>
  </form>
  
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Link</th>
        <th>Description</th>
        <th>Category</th>
      </tr>
    </thead>
    <tbody>
      <% resources.forEach(resource => { %>
        <tr>
          <td><%= resource.id %></td>
          <td><%= resource.name %></td>
          <td><a href="<%= resource.URL %>"><%= resource.URL %></a></td>
          <td><%= resource.details %></td>
          <td><%= resource.category_id %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  
  <a href="/home">Back to Home</a>
</body>
</html>

