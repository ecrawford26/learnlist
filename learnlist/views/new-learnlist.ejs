<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Learnlist</title>
</head>
<body>
    <h1>Create Learnlist</h1>
    <form action="/learnlists" method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
        <label for="description">Description:</label>
        <textarea id="description" name="description"></textarea>
        <h2>Select Resources:</h2>
        <% if (resources && resources.length > 0) { %>
            <% resources.forEach(resource => { %>
                <div>
                    <input type="checkbox" id="resource-<%= resource.id %>" name="resources" value="<%= resource.id %>">
                    <label for="resource-<%= resource.id %>"><%= resource.name %></label>
                </div>
            <% }) %>
        <% } else { %>
            <p>No resources available.</p>
        <% } %>
        <button type="submit">Create</button>
    </form>
</body>
</html>

