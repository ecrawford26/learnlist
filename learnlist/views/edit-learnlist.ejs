<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit Learnlist</title>
</head>
<body>
    <h1>Edit Learnlist</h1>
    <form action="/learnlists/<%= learnlist.id %>" method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= learnlist.name %>" required>
        <label for="description">Description:</label>
        <textarea id="description" name="description"><%= learnlist.description %></textarea>
        <h2>Select Resources:</h2>
        <% resources.forEach(resource => { %>
            <div>
                <input type="checkbox" id="resource-<%= resource.id %>" name="resources" value="<%= resource.id %>" <%= selectedResources.includes(resource.id) ? 'checked' : '' %>>
                <label for="resource-<%= resource.id %>"><%= resource.name %></label>
            </div>
        <% }) %>
        <button type="submit">Update</button>
    </form>
</body>
</html>
